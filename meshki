print("=== –°–ò–°–¢–ï–ú–ê –û–ë–ù–ê–†–£–ñ–ï–ù–ò–Ø –≠–ö–ó–û–ü–õ–ê–ù–ï–¢ ===") 
mass = float(input("–í–≤–µ–¥–∏—Ç–µ –º–∞—Å—Å—É –ø–ª–∞–Ω–µ—Ç—ã (–≤ –º–∞—Å—Å–∞—Ö –ó–µ–º–ª–∏): ")) 
distance = float(input("–í–≤–µ–¥–∏—Ç–µ —Ä–∞—Å—Å—Ç–æ—è–Ω–∏–µ –¥–æ –∑–≤–µ–∑–¥—ã (–≤ –∞.–µ.): ")) 
if 0.1<= mass<=1:
   planet_type = "–û—Å—Ç–µ—Ä–æ–∏–¥"
elif 1.1<= mass<=2:
    planet_type = "–ó–µ–º–Ω–æ–≥–æ —Ç–∏–ø–∞"
elif mass < 10:
    planet_type = "–°—É–ø–µ—Ä-–ó–µ–º–ª—è"
elif mass < 50:
    planet_type = "–ì–∞–∑–æ–≤—ã–π –≥–∏–≥–∞–Ω—Ç"
else:
    planet_type = "–°–≤—Ä–µ—Ö–≥–∏–≥–∞–Ω—Ç"
if 0.8<= distance<=1  and planet_type == "–ó–µ–º–Ω–æ–≥–æ —Ç–∏–ø–∞":
    life  = "—à–∞–Ω—Å –∂–∏–∑–Ω–∏ –≤—ã—Å–æ–∫ üå±" 
elif distance >= 1.6 and distance <= 2.4: 
    life = "–í–æ–∑–º–æ–∂–Ω–∞ –∂–∏–∑–Ω—å (–Ω—É–∂–Ω—ã –∏—Å—Å–ª–µ–¥–æ–≤–∞–Ω–∏—è)" 
else: 
    life = ("–ñ–∏–∑–Ω—å –º–∞–ª–æ–≤–µ—Ä–æ—è—Ç–Ω–∞")
print("\n--- –†–ï–ó–£–õ–¨–¢–ê–¢ –ê–ù–ê–õ–ò–ó–ê ---") 
print("–¢–∏–ø –æ–±—ä–µ–∫—Ç–∞:", planet_type )
print("–†–∞—Å—Å—Ç–æ—è–Ω–∏–µ –æ—Ç –∑–≤–µ–∑–¥—ã:", distance, "–∞.–µ.") 
print("–í—ã–≤–æ–¥:", life) 
print("–ê–Ω–∞–ª–∏–∑ –∑–∞–≤–µ—Ä—à—ë–Ω")


